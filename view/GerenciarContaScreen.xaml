<Window x:Class="UVVFintech.View.GerenciarContaScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVVFintech.View"
        mc:Ignorable="d"
        Title="GerenciarContaScreen" Height="450" Width="800" Background="#FF80C1D5">
    <Grid>
        <Grid Margin="0,0,0,261">
            <DataGrid x:Name="DataGrid_Conta" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>
        </Grid>
        <Button x:Name="Button_CriarNovaConta" Content="Criar Nova Conta" HorizontalAlignment="Center" Margin="0,352,0,0" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
</Window>
